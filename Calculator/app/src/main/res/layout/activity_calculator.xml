<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.sw2017.calculator.Calculator">

    <Button
        android:text="="
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/Button_ID_Gleich"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/Button_ID_Mal" />

    <Button
        android:text="1"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/button23"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_below="@+id/Button_ID_4"
        android:layout_alignStart="@+id/Button_ID_4" />

    <Button
        android:text="2"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_2"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignStart="@+id/Button_ID_5"
        android:layout_below="@+id/Button_ID_4"
        android:layout_alignBottom="@+id/button23" />

    <Button
        android:text="6"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_6"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_5"
        android:layout_alignTop="@+id/Button_ID_5"
        android:layout_toEndOf="@+id/Button_ID_2" />

    <Button
        android:text="3"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_3"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_2"
        android:layout_alignStart="@+id/Button_ID_6"
        android:layout_alignTop="@+id/Button_ID_2" />

    <Button
        android:text="+"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_Plus"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/button9"
        android:layout_toEndOf="@+id/Button_ID_3"
        android:layout_alignTop="@+id/button9" />

    <Button
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_Mal"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_3"
        android:text="*"
        android:layout_alignTop="@+id/Button_ID_3"
        android:layout_alignStart="@+id/Button_ID_Minus" />

    <Button
        android:text="-"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_Minus"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_6"
        android:layout_alignTop="@+id/Button_ID_6"
        android:layout_toEndOf="@+id/Button_ID_3" />

    <Button
        android:text="8"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_8"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_toEndOf="@+id/button5"
        android:layout_alignTop="@+id/button5"
        android:layout_alignBottom="@+id/button5" />

    <Button
        android:text="9"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/button9"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_8"
        android:layout_toEndOf="@+id/Button_ID_2"
        android:layout_alignTop="@+id/Button_ID_8" />

    <Button
        android:text="5"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_5"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignTop="@+id/Button_ID_4"
        android:layout_alignEnd="@+id/Button_ID_8"
        android:layout_toEndOf="@+id/button5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_4"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/Button_ID_0"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_C"
        android:layout_toStartOf="@+id/Button_ID_3"
        android:layout_alignTop="@+id/Button_ID_C" />

    <Button
        android:text="C"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/Button_ID_C"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/Button_ID_Div"
        android:layout_alignTop="@+id/Button_ID_Div"
        android:layout_alignStart="@+id/button23" />

    <Button
        android:text="Div"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/Button_ID_Div"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="7"
        android:layout_width ="80dip"
        android:layout_height ="80dip"
        android:id="@+id/button5"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:minWidth="50dip"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/Button_ID_C" />

</RelativeLayout>
